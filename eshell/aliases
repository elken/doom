alias _ sudo $*
alias q exit
alias c recenter 0
alias e for i in ${eshell-flatten-list $*} {find-file $i}
alias o for i in ${eshell-flatten-list $*} {consult-file-externally $i}
alias l ls -1A $*
alias ll ls -lh $*
alias lt ll -tr $*
alias la ll -A $*
alias lc lt -c $*
alias lk ll -Sr $*
alias lm la $* | "$PAGER"
alias lr ll -R $*
alias lu lt -u $*
alias lx ll -XB $*
